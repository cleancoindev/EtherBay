<!DOCTYPE html>
<html>
<body>

<canvas id="myCanvas" width="300" height="200" style="border:1px solid #d3d3d3;">
Your browser does not support the HTML5 canvas tag.</canvas>

<script>

var c = document.getElementById("myCanvas");
var ctx = c.getContext("2d");
const w = c.width;
const h = c.height;

const x = w/2;
const y = h/2;
const radius = h/4;

ctx.fillStyle = "#abcd45";
ctx.strokeStyle = "#703005";
ctx.save();

ctx.translate(x, y);

// Ethereum Top Filling + perimiter
ctx.beginPath();
ctx.moveTo(0, -radius);
ctx.lineTo(-0.5*radius,0);
ctx.lineTo(0, 0.289*radius);
ctx.lineTo(0.5*radius, 0);
ctx.lineTo(0, -radius);
ctx.closePath();
ctx.fill();
// Inner edges
ctx.moveTo(0, -radius);
ctx.lineTo(0, 0.289*radius);
ctx.lineTo(0.5*radius,0);
ctx.lineTo(0, -0.289*radius);
ctx.lineTo(-0.5*radius,0);
ctx.stroke();

// Bottom Filling + Outer
ctx.translate(0, 0.15*radius);
ctx.beginPath();
ctx.moveTo(0.5*radius, 0);
ctx.lineTo(0, 0.866*radius);
ctx.lineTo(-0.5*radius, 0);
ctx.lineTo(0, 0.289*radius);
ctx.lineTo(0.5*radius, 0);
ctx.fill();
// Inner edge
ctx.moveTo(0, 0.289*radius);
ctx.lineTo(0, 0.866*radius);
ctx.stroke();
</script> 


</body>
</html>

